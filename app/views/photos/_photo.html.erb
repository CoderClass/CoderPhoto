<div class="card-block">
  <h6 class="card-title"><%= photo.username %></h6>
</div>
  <%= image_tag(photo.url, class: "card-img-top img-responsive") %>
<div class="card-block">
    <p class="card-text"><%= photo.caption %></p>
    <% if signed_in? %>
      <% if photo.liked_by?(current_user) %>
        <%= link_to "Unlike", unlike_photo_path(photo), method: 'put', remote: true, class: 'btn btn-danger' %>
      <% else %>
        <%= link_to "Like", like_photo_path(photo), method: 'put', remote: true, class: 'btn btn-primary' %>
      <% end %>
    <% end %>
    <p class="card-subtitle text-muted"><%= photo.likes_count %> likes</p>
  </div>
</div>
